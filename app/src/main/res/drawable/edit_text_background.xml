<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 设置圆角 -->
    <corners android:radius="0dp" />

    <!-- 设置边框 -->
    <stroke
        android:width="2dp"
        android:color="#DDDDDD" />

    <!-- 背景颜色 -->
    <solid android:color="#FFFFFF" />

    <!-- 内部填充距离 -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />
</shape>
