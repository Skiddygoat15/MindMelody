<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Back Button and Title -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp">

        <!-- Back Button -->
        <ImageButton
            android:id="@+id/back_button"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_back_arrow"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/back"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="5dp" />

        <!-- Title Text in the Middle -->
        <TextView
            android:id="@+id/title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="Focus Mode"
            android:textSize="24sp" />
    </RelativeLayout>

    <!-- Dropdown to select Focus Mode Scenario (Work, Study, etc.) -->

    <!-- Horizontal Layout for Jukebox and Play Favorite Buttons -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_gravity="center">

        <!-- Title Text in the Middle -->
        <TextView
            android:id="@+id/choose_mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:text="Choose Mode:  "
            android:textSize="15sp"
            android:textStyle="bold"/>

        <Spinner
            android:id="@+id/spinner_scenario"
            android:layout_width="158dp"
            android:layout_height="wrap_content"
            android:dropDownWidth="match_parent"
            android:dropDownVerticalOffset="5dp"
            android:entries="@array/focus_scenarios"
            android:padding="20dp"
            android:popupBackground="@android:color/white"
            android:spinnerMode="dropdown" />
    </LinearLayout>

    <!-- Circular Timer Layout -->

    <!-- Sound Control -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:gravity="center">

        <!-- Circular Progress Bar -->
        <ProgressBar
            android:id="@+id/circularProgressBar"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_centerInParent="true"
            android:indeterminate="false"
            android:max="100"
            android:progressDrawable="@drawable/circular_progress_bar" />

        <!-- Timer Text in the Center -->
        <TextView
            android:id="@+id/timer_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="25:00"
            android:textColor="#000"
            android:textSize="40sp" />
    </RelativeLayout>

    <!-- MUSIC with Fading Lines -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingBottom="10dp"
        android:layout_gravity="center_horizontal">

        <!-- Left Fading Line -->
        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="2dp"
            android:background="@drawable/fade_line" />

        <!-- MUSIC Text -->
        <TextView
            android:id="@+id/music_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="MUSIC"
            android:textColor="#A2B2D2"
            android:textSize="20sp"
            android:textStyle="bold"
            android:paddingStart="10dp"
            android:paddingEnd="10dp" />

        <!-- Right Fading Line -->
        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="2dp"
            android:background="@drawable/fade_line" />
    </LinearLayout>

    <!-- Horizontal Layout for Jukebox and Play Favorite Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_gravity="center"
        android:paddingBottom="10dp">

        <!-- Jukebox Button -->
        <Button
            android:id="@+id/button_change_sound"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jukebox" />

        <!-- Play Favorite Button -->
        <Button
            android:id="@+id/button_custom_music"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="\u2661 Favorite"
            android:layout_marginStart="16dp" />

        <!-- Volume Change -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginStart="16dp">

            <!-- Sound Icon -->
            <ImageView
                android:id="@+id/sound_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_sound"
                android:contentDescription="Volume Icon"/>

            <!-- Volume SeekBar -->
            <SeekBar
                android:id="@+id/seekbar_volume"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:progress="50" />
        </LinearLayout>

    </LinearLayout>

    <!-- PLAYER with Fading Lines -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingBottom="10dp"
        android:layout_gravity="center_horizontal">

        <!-- Left Fading Line -->
        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="2dp"
            android:background="@drawable/fade_line" />

        <!-- PLAYER Text -->
        <TextView
            android:id="@+id/player_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="PLAYER"
            android:textColor="#A2B2D2"
            android:textSize="20sp"
            android:textStyle="bold"
            android:paddingStart="10dp"
            android:paddingEnd="10dp" />

        <!-- Right Fading Line -->
        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="2dp"
            android:background="@drawable/fade_line" />
    </LinearLayout>

    <!-- Buttons for Pause, Change Time, and Extend -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_gravity="center">

        <Button
            android:id="@+id/button_pause"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pause" />

        <Button
            android:id="@+id/start_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginStart="16dp" />

        <Button
            android:id="@+id/button_extend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Extend"
            android:layout_marginStart="16dp" />
    </LinearLayout>

    <!-- Horizontal Layout for Change Favorite and Exit Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_gravity="center"
        android:paddingTop="20dp">

        <!-- Change Favorite Button -->
        <Button
            android:id="@+id/button_change_favorite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:drawableBottom="@drawable/ic_exit"
            android:gravity="center"
            android:text="Change Favorite"
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>
