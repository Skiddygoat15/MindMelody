<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Dropdown to select Focus Mode Scenario (Work, Study, etc.) -->
    <Spinner
        android:id="@+id/spinner_scenario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/focus_scenarios" />

    <!-- Timer Display -->
    <TextView
        android:id="@+id/timer_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="25:00"
        android:textSize="40sp"
        android:gravity="center"
        android:layout_gravity="center"
        android:padding="20dp" />

    <!-- Buttons for Pause, Stop, and Extend -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_gravity="center">

        <Button
            android:id="@+id/button_pause"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pause" />

        <Button
            android:id="@+id/button_stop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stop n Back"
            android:layout_marginStart="16dp" />

        <Button
            android:id="@+id/button_extend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Extend"
            android:layout_marginStart="16dp" />
    </LinearLayout>

    <!-- Sound Control -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_gravity="center"
        android:paddingTop="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Volume"
            android:layout_marginEnd="8dp" />

        <SeekBar
            android:id="@+id/seekbar_volume"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:progress="50" />
    </LinearLayout>

    <!-- Horizontal Layout for Change Sound and Custom Music Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_gravity="center"
        android:paddingTop="20dp">

        <!-- Change Sound Button -->
        <Button
            android:id="@+id/button_change_sound"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Change Sound" />

        <!-- Custom Music Button -->
        <Button
            android:id="@+id/button_custom_music"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Custom Music"
            android:layout_marginStart="16dp" /> <!-- Adds spacing between buttons -->
    </LinearLayout>

</LinearLayout>
