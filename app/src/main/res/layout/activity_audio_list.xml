<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- 返回按钮 -->
    <ImageButton
        android:id="@+id/back_button"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_back_arrow"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="@string/back"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp" />

    <!-- 顶部的TextView -->
    <TextView
        android:id="@+id/text_view_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:padding="16dp"
        android:text="@string/audio_library"
        android:textSize="24sp" />

    <!-- 固定高度的RecyclerView，超出时可以滚动 -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/audio_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_view_title"
        android:layout_above="@+id/bottom_controls"/>

    <!-- 底部的按钮容器，带背景颜色 -->
    <LinearLayout
        android:id="@+id/bottom_controls"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:background="@color/grey"
        android:padding="16dp">

        <!-- 播放按钮 -->
        <ImageButton
            android:id="@+id/play_button"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/play_icon"
            android:contentDescription="@string/play"
            android:scaleType="fitCenter"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:layout_margin="8dp"/>

<!--        &lt;!&ndash; 暂停按钮 &ndash;&gt;-->
<!--        <ImageButton-->
<!--            android:id="@+id/pause_button"-->
<!--            android:layout_width="60dp"-->
<!--            android:layout_height="60dp"-->
<!--            android:src="@drawable/pause_icon"-->
<!--            android:contentDescription="@string/pause"-->
<!--            android:scaleType="fitCenter"-->
<!--            android:background="?attr/selectableItemBackgroundBorderless"-->
<!--            android:layout_margin="8dp"/>-->

        <!-- 专注模式按钮 -->
        <ImageButton
            android:id="@+id/focus_mode_button"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/focus_mode_icon"
            android:contentDescription="@string/focus_mode"
            android:scaleType="fitCenter"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:layout_margin="8dp" />
    </LinearLayout>
</RelativeLayout>





